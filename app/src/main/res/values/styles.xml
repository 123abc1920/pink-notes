<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="MyTextStyle.Blue" parent="MyTextStyle">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="MyToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/Theme.MyCuteApplication</item>
        <item name="titleTextColor">@color/white</item>

        <item name="android:background">@color/pink</item>
    </style>

    <style name="MyToolBar.Blue" parent="MyToolBar">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="MenuStyle">
        <item name="android:textSize">15sp</item>
        <item name="tickColorActive">@color/white</item>
        <item name="tickColorInactive">@color/white</item>
    </style>

    <style name="ExampleCheckbox1">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">@color/pink</item>
    </style>

    <style name="Button.Blue" parent="Button">
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="TitleDialog">
        <item name="android:textColor">@color/pink</item>
    </style>

    <style name="TitleDialog.Blue" parent="TitleDialog">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="RoundButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

</resources>